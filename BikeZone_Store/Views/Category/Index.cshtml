@model IEnumerable<BikeZone_Store.Models.Category>  
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Category in Model)
            {

                <tr>
                    <td>@Category.Id</td>
                    <td>@Category.Name</td>
                    <td>@Category.Description</td>

                </tr>

            }


        </tbody>
    </table>
</div>